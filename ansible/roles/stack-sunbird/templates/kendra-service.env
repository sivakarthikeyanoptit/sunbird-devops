# Service Config
# Port on which the service will listen to
PORT={{kendra_port|default("7001")}} 

#Application ENV example local/dev/production
NODE_ENV={{kendra_node_env|default("production")}}

#service based URL
APPLICATION_BASE_URL={{kendra_default_application_base_url|default("/kendra/")}}

# Allow report request to run for longer time
request_timeout_for_reports={{kendra_default_request_timeout_for_reports|default("120000")}}
MONGODB_URL={{kendra_mongodb_url}}

# Current in use database name 
DB={{kendra_db|default("sl-prod")}}

## Cloud Config
# Google Cloud Configuration
CLOUD_STORAGE=GCP
GCP_PATH={{kendra_gcp_path}}
GCP_BUCKET_NAME={{kendra_gcp_path}}

# Azure Cloud Configuration
CLOUD_STORAGE=AZURE
AZURE_ACCOUNT_NAME={{kendra_azure_account_name}}
AZURE_ACCOUNT_KEY={{kendra_azure_account_key}}
AZURE_STORAGE_CONTAINER={{kendra_azure_storage_container}}

# Secure token access Admin related API's
# The value of internal access token can be generated by command - "openssl rand -hex 10
INTERNAL_ACCESS_TOKEN={{kendra_internal_access_token}}

# Folder name in the project root directory where all the file to be imported will be stored
PUBLIC_FOLDER_PATH={{kendra_public_folder_path|default("public")}}

# Kafka Configuration
KAFKA_COMMUNICATIONS_ON_OFF={{kendra_kafka_communications_on_off|default("ON")}}

#Kafka URL
KAFKA_URL={{kendra_kafka_url}}

